<h2>Sign up</h2>
<% if resource.errors.any?  %>
  <ul class="alert">
    <% resource.errors.full_messages.each do |message| %>
      <li>bb<%= message %></li>
    <% end %>
  </ul>
<% end %>

<div class="registration-form">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

    <div class="form-group">
      <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control item", placeholder: "Digite seu E-mail" %>
      </div>
    </div>

    <div class="form-group">
      <div class="field">
        <%= f.label :password %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> m√≠nimo 6 catacteres)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password", class:"form-control item", placeholder: "Digite sua senha" %>
      </div>
    </div>

    <div class="form-group">
      <div class="field">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"form-control item", placeholder: "Repita sua senha" %>
      </div>
    </div>

    <div class="form-group actions">
      <div class="actions">
        <%= f.submit "Entrar", class:"btn btn-block create-account" %>
      </div>
    </div>
  <% end %>

  <div class="social-media">
    <%= link_to "Voltar", new_user_session_path %>
  </div>
</div>