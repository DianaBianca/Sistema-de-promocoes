<% if @promotion.errors.any? %>
  <ul>
    <% @promotion.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<div class="promotion-header">
  <h1>Criação de Promoção</h1>
</div>

<%= form_with model: @promotion do |promotion| %>
  <%= render partial: 'form', locals: { promotion: promotion } %>
  <div class="buttons-botton">
    <%= promotion.submit 'Criar promoção', class:"btn btn-botton btn-primary" %>
    <%= link_to 'Voltar', promotions_path, class:"btn btn-botton btn-primary" %>
  </div>
<% end %>